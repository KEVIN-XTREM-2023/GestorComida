<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".loginActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Inicio sesión"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold|normal"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/edittxtUsuario"
            android:layout_width="290sp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gris"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/correoelectronico"
            android:drawablePadding="10dp"
            android:paddingHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <TextView
            android:id="@+id/mensajeUsuario"
            android:layout_width="290sp"
            android:layout_height="match_parent"
            android:text="* Email es Obligatorio"
            android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/edittxtcontrasenia"
            android:layout_width="290sp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gris"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/contrasena"
            android:drawablePadding="10dp"
            android:paddingHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <TextView
            android:id="@+id/mensajeContrasenia"
            android:layout_width="290sp"
            android:layout_height="match_parent"
            android:text="* Contraseña es Obligatorio"
            android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Ingresar"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/mensajeNueva"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No tienes una cuenta?"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="290sp"
            android:layout_height="wrap_content"

            android:text="Registrarse"
            />

    </LinearLayout>



</LinearLayout>